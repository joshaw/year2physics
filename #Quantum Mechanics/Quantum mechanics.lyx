\begin_layout Subsection
Transmission and Reflection Coefficients
\end_layout

\begin_layout Standard
T = probability of transmission (beyond 
\begin_inset Formula $x>0$
\end_inset

)
\end_layout

\begin_layout Standard
R = probability of reflection
\end_layout

\begin_layout Standard
Flux = number density in the beam 
\begin_inset Formula $\times$
\end_inset

 velocity.
 Number density 
\begin_inset Formula $\propto|\psi|^{2}=\psi*\psi$
\end_inset

, velocity 
\begin_inset Formula $\propto k$
\end_inset

.
\begin_inset Formula 
\begin{eqnarray*}
\text{\Rightarrow Flux} & \propto & k|\psi|^{2}
\end{eqnarray*}

\end_inset

Transmitted probability,
\begin_inset Formula 
\begin{equation}
T=\frac{\text{Transmitted flux}}{\text{Incident flux}}
\end{equation}

\end_inset


\begin_inset Formula 
\[
T=\frac{k_{2}|C|^{2}}{k_{1}|A|^{2}}=\frac{k_{2}}{k_{1}}\left(\frac{2k_{1}}{k_{1}+k_{2}}\right)^{2}=\frac{4k_{1}k_{2}}{\left(k_{1}+k_{2}\right)^{2}}\quad\text{(For \textsc{this} particle)}
\]

\end_inset

Reflected probability, 
\begin_inset Formula 
\begin{equation}
R=\frac{\text{Reflected flux}}{\text{Incident flux}}
\end{equation}

\end_inset


\begin_inset Formula 
\[
R=\frac{k_{1}|B|^{2}}{k_{1}|A|^{2}}=\frac{|B|^{2}}{|A|^{2}}=\left(\frac{k_{1}-k_{2}}{k_{1}+k_{2}}\right)^{2}\quad\text{(For \textsc{this} particle)}
\]

\end_inset

The net flux is conserved, so 
\begin_inset Formula $\sum(T+R)=1$
\end_inset


\end_layout

