\begin_inset Formula $ik_{1}(A-B)=-KC$
\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\Rightarrow2A & = & \left(1+\frac{iK}{k_{1}}\right)C\\
\Rightarrow2B & = & \left(1-\frac{iK}{k_{1}}\right)C
